<h2>Admin. List of artworks</h2>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Price</th>
      <th>Quant</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= artwork.category %></td>
        <td><%= artwork.title %></td>
        <td><%= artwork.price %></td>
        <td><%= artwork.quantity %></td>
        <td><%= artwork.description %></td>
        <td><%= link_to 'Preview', artwork %> | </td>
        <td><%= link_to 'Edit', edit_artwork_path(artwork) %> | </td>
        <td><%= link_to 'Delete', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artwork', new_artwork_path %>
<%= link_to 'Back to Admin', admin_path %>

<%= will_paginate @artworks %>
