<p id="notice"><%= notice %></p>
<h2>Open Your Shop</h2>


<%= form_for(@seller, html: { class: "form-horizontal"} ) do |f| %>

<%= render "shared/error_messages", target: @seller %>

<div class="form-group">

		<%= f.label(:displayed_name, "Choose displayed name:", class: "col-sm-3 control-label" ) %>
		<div class="col-sm-9">
    <%= f.text_field(:displayed_name, class: "form-control" ) %>
		</div>
</div>




	<div class="field">
	  <%= f.label :seller_email, "Type in your seller email:" %>
    <%= f.text_field :seller_email %>
  </div>
	<div class="field">
	  <%= f.label :seller_description, "Type in your description:" %>
    <%= f.text_area :seller_description %>
  </div>
	<div class="actions">
	   <%= f.submit %>
	</div>
<% end %>
