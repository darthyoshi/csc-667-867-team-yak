<!DOCTYPE html>
<%
title = ""
desc = ""
found = false

if request.fullpath == "/"
  title = "ArtSale Home"
  found = true
end

unless found
  CATEGORIES.each do |cat,details|
    if details['url'] == request.fullpath
      desc = details['description']
      title = "Browse by category: " + desc
      found = true
      break
    end
  end
end

unless found
  FOOTER.each do |cat,details|
    if details['url'] == request.fullpath
      title = details['description']
      desc = title
      found = true
      break
    end
  end
end

unless found
  BREADCRUMBS.each do |cat,details|
    if request.fullpath.include? details['url'] 
      title = details['description']
      desc = title
      found = true
      break
    end
  end
end
%>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header class='navbar'>
        <div class='container-fluid'>
            <div style='float: left'>
                <a href='/'><span id="logoText">ArtSale</span></a>
            </div>

            <div id="user_nav" style='float: right'>
                <% if user_signed_in? %>
                    Hi, <%= current_user.firstname + " " + current_user.lastname %> |
                    <%= link_to "Your Account", :controller => "account" %> |
                    Open Shop |
                    Cart |
                    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
                <% else %>
                    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Sign in", new_user_session_path %>
                <% end %>
            </div>

            <div style='text-align: center'>
                <form id='searchform' action='/search' method='get'>
                    <input type='text' class='blank' id='search' name='search' style='width: 50%' value='Search: item name, item description, item tag, seller name'>
                    <input type='submit'>
                </form>
            </div>
        </div>
    </header>

    <div class='container-fluid'>
        <div class="sidebar panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    Categories
                </h4>
            </div>

            <div class="panel-body">
                <list>
                <% CATEGORIES.each do |cat,details| %>
                    <li>
                        <%= link_to cat, details['url'] %>
                    </li>
                <% end %>
                </list>
            </div>
        </div>

        <div class='content'>
                <ol class='breadcrumb'>
                <% if title == "ArtSale Home" %>
                    <li class='active'>
                        Home
                    </li>
                <% else %>
                    <li>
                        <a href='/'>Home</a>
                    </li>
                    <span class='divide'>></span>
                    <li class='active'>
                        <%= desc %>
                    </li>
                <% end %>
                </ol>

            <div class='hero-unit'>

                <%= yield %>
            </div>
        </div>
    </div>

    <footer class='footer'>
        <div style='float: left'>ArtSale</div>

        <div style='float: right'>&copy; 2013 Team YAK</div>

        <div style='clear: none; text-align: center'>
            |
            <% FOOTER.each do |cat,details| %>
                <%= link_to details['description'], details['url'] %> |
            <% end %>
        </div>
    </footer>
</body>
</html>
