<h2>Your new artwork for sale</h2>

<%= form_for [:seller, @artwork], :url => seller_artwork_path(@artwork) do |f| %>

<%= render "shared/error_messages", target: @artwork %>

  <div class="field">
    <%= f.label :category %>		
		<%= select("artwork", "category", artwork_categories) %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

	<div class="actions">
    <%= f.submit %><br/>
  </div>
<% end %>
