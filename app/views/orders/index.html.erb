<h2>Your orders</h2>

<table>
  <thead>
    <tr>
			<th>Order id</th>
      <th>Order date</th>
      <th>Shipping cost</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @myorders.each do |order| %>
      <tr>
	      <td><%= order.id %></td>
        <td> | <%= order.order_date.localtime.to_s(:short) %></td>
        <td> | <%= number_to_currency(order.shipping_cost) %></td>
        <td><%= link_to 'See details', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
