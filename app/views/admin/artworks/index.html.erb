<h2>All artworks</h2>

<%= link_to 'New Artwork', new_admin_artwork_path %>
<div style='float:right'><%= link_to 'Back to Admin', admin_path %></div>

<table class='table'>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= artwork.category %></td>
        <td><%= artwork.title %></td>
        <td><%= number_to_currency(artwork.price) %></td>
        <td><%= artwork.quantity %></td>
        <td><%= artwork.description %></td>
        <td><%= link_to 'Preview', admin_artwork_path(artwork) %></td>
        <td><%= link_to 'Edit', edit_admin_artwork_path(artwork) %></td>
        <td><%= link_to 'Delete', admin_artwork_path(artwork), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>            
<%= link_to 'New Artwork', new_admin_artwork_path %>
<div style='float:right'>
<%= link_to 'Back to Admin', admin_path %>
</div>
<%= will_paginate @artworks %>
