<h2>Admin. All users</h2>
<br>
<%= link_to 'Back to Admin', admin_menu_index_path %>
<br>

<table>
  <thead>
    <tr>
			<th>id</th>
			<th>Name</th>
			<th>Email</th>						
      <th>Shipping address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
	      <td><%= user.id %></td>
				<td> | <%= userfullname(user) %></td>
				<td> | <%= user.email %></td>		
				<% if user.shipping_address.nil? %>					
        <td> | N/A </td> 
				<% else %>
				<td> | <%= user.shipping_address %></td>
				<% end %>
			</tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back to Admin', admin_menu_index_path %>
