<div class='admin'>
	
<h2>Admin. All tags</h2>
<%= link_to 'Back to Admin', admin_menu_index_path %>
<br>
<br>

<% if params[:id].blank?  %>

	<%= form_for(@arttag, url: {action: 'create'}, html: { class: "form-inline"}) do |f| %>
	  <div class="form-group">	
	    <label class="sr-only" for="createField">New Tag</label>
	    <%= text_field(:arttag, :tagname, id: "createField", class: "form-control", placeholder: "New Tag") %>
	  </div>
	  <%= f.submit( 'Create', class: "btn btn-default" ) %>
	<% end %>
	
<% else %>	

	<form class="form-inline" role="form">
	<%= form_for @arttag, :url => update_admin_arttags_path(@arttag) do |f| %>
	<table>
		<tr>
			<th>update tag id: <%= @arttag.id %> </th>
			<th></th>
		</tr>
		<tr>
			<td><%= text_field(:arttag, :tagname) %></td>
			<td><button type="submit" class="btn btn-default"><%= f.submit( 'update' ) %></button></td>
		</tr>
	</table>
	<% end %>
	</form>
	
<% end %>
	
<table class="table table-hover">
	<% @arttags.each do |tag| %>
	<tr>
		<td><%= tag.id %></td>
		<td><%= tag.tagname %></td>
		<td><%= link_to 'Edit', admin_arttags_path(:id => tag.id) %></td>
		<td><%= link_to 'Delete', admin_arttag_path(tag), method: :delete, data: { confirm: 'Are you sure you want to remove this tag?' } %></td>
		</tr>
  <% end %>
</table>

</div>
