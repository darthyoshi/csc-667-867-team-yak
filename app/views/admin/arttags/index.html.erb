<div class='admin'>
	
<h2>Admin. All tags</h2>
<%= link_to 'Back to Admin', admin_menu_index_path %>
<br>
<br>

<% if params[:id].blank?  %>

	<%= form_for(@arttag, url: {action: 'create'}, html: { class: "form-inline"}) do |f| %>
	  <div class="form-group">	
	    <label class="sr-only" for="createField">New Tag</label>
	    <%= text_field(:arttag, :tagname, id: "createField", class: "form-control", placeholder: "New Tag") %>
	  </div>
	  <%= f.submit( 'Create', class: "btn btn-default" ) %>
	<% end %>
	
<% else %>	

	<%= form_for @arttag, :url => update_admin_arttags_path(@arttag), html: { class: "form-inline"} do |f| %>
		<div class="form-group">
			<label class="sr-only" for="updateField">Update Tag</label>
			<%= text_field(:arttag, :tagname, id: "updateField", class: "form-control") %>
		</div>
			<%= f.submit( 'update', class: "btn btn-default"  ) %>
	<% end %>





	
<% end %>
	
<table class="table table-hover">
	<% @arttags.each do |tag| %>
	<tr>
		<td><%= tag.id %></td>
		<td><%= tag.tagname %></td>
		<td><%= link_to 'Edit', admin_arttags_path(:id => tag.id) %></td>
		<td><%= link_to 'Delete', admin_arttag_path(tag), method: :delete, data: { confirm: 'Are you sure you want to remove this tag?' } %></td>
		</tr>
  <% end %>
</table>

</div>
