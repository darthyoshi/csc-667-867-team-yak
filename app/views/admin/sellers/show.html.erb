<div class='admin'>

<h2>View Seller Info</h2>
<p>
  <strong>Opened shop at:</strong>
  <%= @seller.seller_date.localtime.to_s(:long) %>
</p>
<p>
  <strong>User id:</strong>
  <%= @user.id %>
</p> 
<p>
  <strong>User name:</strong>
  <%= userfullname(@user) %>
</p>
<p>
  <strong>Displayed seller's name:</strong>
  <%= @seller.displayed_name %>
</p>
<p>
	<strong>Description:</strong>
  <%= @seller.seller_description %>
</p>
<p>
  <strong>Seller's email:</strong>
  <%= @seller.seller_email %>
</p><br>
<%= link_to('Edit Seller Info', edit_admin_seller_path(@seller), class: "btn btn-default") %><br><br>
<%= link_to 'Back to Sellers', admin_sellers_path %><br><br>
<br>
<h3>Seller's artworks</h3>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% @myartworks.each do |item| %>
      <tr>
        <td>
				<%= item.title %><br>
				<%= image_tag(item.imagepath, border:'0', height:'100', width:'100') %>
				</td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
