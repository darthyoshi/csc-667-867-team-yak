<div class='admin'>
<h2>Admin. All sellers</h2>
<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Seller since</th>
      <th>Seller id</th>
      <th>Displayed name</th>
      <th>Seller description</th>
      <th>Seller email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sellers.each do |seller| %>
      <tr>
        <td><%= seller.seller_date.localtime.to_date %></td>
        <td><%= seller.id %></td>
        <td><%= seller.displayed_name %></td>
        <td><%= seller.seller_description %></td>
        <td><%= seller.seller_email %></td>
        <td><%= link_to 'View', admin_seller_path(seller) %></td>
        <td><%= link_to 'Edit', edit_admin_seller_path(seller) %></td>
        <td><%= link_to 'Delete', admin_seller_path(seller), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back to Admin', admin_menu_index_path %>
<br><br>
</div>
